				}
			});

		});
		$("#saveBtn").click(function () {
            $.ajax({
                url:"workbench/customer/save.do",
                data:{
                    "owner":$.trim($("#create-owner").val()),
                    "banquetDate":$.trim($("#create-banquetDate").val()),
                    "banquetVenue":$.trim($("#create-banquetVenue").val()),
